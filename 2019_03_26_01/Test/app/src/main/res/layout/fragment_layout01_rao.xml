<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1" >

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_layout01_VP_KongZhi_rao"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fragment_layout01_Btn_KongZhi_rao"
            android:textSize="40sp"
            android:text="控制"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fragment_layout01_button_back_rao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment_layout01_Btn_ZhuangTai_rao"
            android:textSize="40sp"
            android:text="状态"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fragment_layout01_button_back_rao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fragment_layout01_Btn_ZhangHu_rao"
            android:textSize="40sp"
            android:text="账户"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/fragment_layout01_button_back_rao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>